<%= form_for(@fiscal_stat, html: {class: "form-horizontal"}) do |f| %>
  <% if @fiscal_stat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fiscal_stat.errors.count, "error") %> prohibited this fiscal_stat from being saved:</h2>

      <ul>
      <% @fiscal_stat.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :fiscal_year,"Financial Year", class: "control-label" %>
    <div class='controls'><%= f.select(:fiscal_year, options_for_select(Constants::FISCAL_YEAR,(@fiscal_stat.fiscal_year.present? ? params[:fiscal_stat][:fiscal_year] : nil)), prompt: "Select Period") %></div>
  </div>
  <div class="control-group">
    <%= f.label :total_revenue,"Total Revenue", class: "control-label" %>
    <div class='controls'><%= f.text_field :total_revenue %></div>
  </div>
  <div class="control-group">
    <%= f.label :net_profit,"Net Profit", class: "control-label" %>
    <div class='controls'><%= f.text_field :net_profit %></div>
  </div>
  <div class="control-group">
    <%= f.label :currency_type,"Currency Type", class: "control-label" %>
    <div class='controls'><%= f.select(:currency_type, options_for_select(Constants::VALID_CURRENCIES), prompt: "Select Currency") %></div>
  </div>
  <div class="control-group">
    <%= f.label :pref_cat,"Prefered Category", class: "control-label" %>
    <div class='controls'><%= f.select(:pref_cat, options_for_select(Constants::VALID_CATEGORIES), prompt: "Select Preference") %></div>
  </div>
  <div class="ml-180">
    <%= f.submit "Save", class: "btn btn-primary"%>
  </div>
<% end %>