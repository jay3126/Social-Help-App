<link rel="stylesheet" href="/assets/ace.min.css">
<link rel="stylesheet" href="/assets/ace-rtl.min.css">
<link rel="stylesheet" href="/assets/ace-skins.min.css">

<div class="sidebar" id="sidebar">

	<ul class="nav nav-list">
		<li id="li_dashboard">
			<a href="/dashboard">
				<i class="icon-dashboard"></i>
				<span class="menu-text"> Dashboard </span>
			</a>
		</li>

		<li id="li_all_projects">
			<a href="/issues">
				<i class="icon-list"></i>
				<span class="menu-text"> All Issues </span>
			</a>
		</li>

		<li id="li_add_issue">
			<a href="/issues/new">
				<i class="icon-plus-sign"></i>
				<span class="menu-text"> Add New Issue </span>
			</a>
		</li>

		<li id="li_my_issues">
			<a href="/my_issues">
				<i class="icon-download-alt"></i>
				<span class="menu-text"> Issues By Me </span>
			</a>
		</li>

		<li>
			<a href="#" class="dropdown-toggle">
				<i class="icon-globe"></i>
				<span class="menu-text"> My Projects </span>
				<b class="arrow icon-angle-down"></b>
			</a>

			<ul class="submenu">
				<li id="li_in_progress">
					<a href="/my_projects?cat=in_progress">
						<i class="icon-double-angle-right"></i>
						In Progress
					</a>
				</li>

				<li id="li_completed_projects">
					<a href="/my_projects?cat=completed_projects">
						<i class="icon-double-angle-right"></i>
						Completed Projects
					</a>
				</li>
			</ul>
		</li>

		<li id="li_my_proposal">
			<a href="/my_proposals">
				<i class="icon-download-alt"></i>
				<span class="menu-text"> My Proposals </span>
			</a>
		</li>

		<li id="li_profile">
			<a href="/profile">
				<i class="icon-picture"></i>
				<span class="menu-text"> Profile </span>
			</a>
		</li>
	</ul>

	<div class="sidebar-collapse" id="sidebar-collapse">
		<i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i>
	</div>

</div>
<script>
	<% if params[:nav].present? %>
		var nav = "<%= params[:nav] %>"
		$("#li_" + nav).addClass("active");
	<% elsif params[:cat].present? %>
		var category = "<%= params[:cat] %>"
		var li = $("#li_" + category);
		li.addClass("active");
		li.parent().closest("li").addClass("open").addClass("active");
	<% else %>
		$("#li_dashboard").addClass("active");
	<% end %>
</script>