<div class="row">
	<div class="col-xs-12">
		<div class="table-header">
			My Donations
		</div>
		<div class="table-responsive">
			<div id="sample-table-2_wrapper" class="dataTables_wrapper" role="grid">
				<table id="sample-table-2" class="table table-striped table-bordered table-hover dataTable" aria-describedby="sample-table-2_info">
					<thead>
						<tr role="row">
							<th class="sorting" role="columnheader" tabindex="0" style="width: 80px;">S. No.</th>
							<th class="sorting" role="columnheader" tabindex="0" style="width: 180px;">Category</th>
							<th class="sorting" role="columnheader" tabindex="0" style="width: 118px;">Amount</th>
							<th class="sorting" role="columnheader" tabindex="0" style="width: 180px;">Date</th>
							<th class="" role="columnheader" tabindex="0" style="width: 120px;"></th>
						</tr>
					</thead>
					<tbody role="alert" aria-live="polite" aria-relevant="all">
						<% @donations.each_with_index do |donation,i| %>
							<tr>
								<td><%= i + 1 %></td>
								<td><%= donation.category %></td>
								<td><%= donation.amount %></td>
								<td><%= donation.created_at %></td>
								<td>
									<div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
									</div>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
		<% unless @donations.present? %>
			<div class="col-xs-12">
				<b>You have not contribute any Donation(s)</b>
			</div>
		<% end %>
	</div>
</div>
