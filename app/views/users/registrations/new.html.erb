<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div>
  	<%= f.label :role, "Register Me As:" %><br/>
  	<%= f.select(:role, options_for_select(["Corporate","NGO","Socialist","Analyst"]),{prompt: "Select Your Role"}) %>
  </div>

  <div>
  	<%= f.label :name %><br/>
  	<%= f.text_field :name %>
  </div>

  <div>
  	<%= f.label :address %><br/>
  	<%= f.text_area :address %>
  </div>

  <div>
  	<%= f.label :pin_code %><br/>
  	<%= f.number_field :pin_code %>
  </div>

  <div>
  	<%= f.label :city %><br/>
  	<%= f.text_field :city %>
  </div>

  <div>
  	<%= f.label :state %><br/>
  	<%= f.text_field :state %>
  </div>

  <div>
  	<%= f.label :country %><br/>
  	<%= f.text_field :state %>
  </div>

  <div>
  	<%= f.label :mobile_number %><br/>
  	<%= f.text_field :mobile_number %>
  </div>

  <div>
  	<%= f.label :phone_number %><br/>
  	<%= f.text_field :phone_number %>
  </div>

  <div>
  	<%= f.label :fax_number %><br/>
  	<%= f.text_field :fax_number %>
  </div>

  <div>
  	<%= f.label :email %><br />
  	<%= f.email_field :email, :autofocus => true %>
  </div>

  <div>
  	<%= f.label :password %><br />
  	<%= f.password_field :password %>
  </div>

  <div>
  	<%= f.label :password_confirmation %><br />
  	<%= f.password_field :password_confirmation %>
  </div>

  <div id="company_details">
	  <div>
  		<%= f.label :company_group %><br/>
  		<%= f.text_field :company_group %>
		</div>

	  <div>
  		<%= f.label :tan_number %><br/>
  		<%= f.text_field :tan_number %>
		</div>
 	
	  <div>
  		<%= f.label :no_of_employees %><br/>
  		<%= f.number_field :no_of_employees %>
		</div>
 	 	
  </div>

  <div id="ngo_details">
  </div>

  <div id="socialist_details">
	  <div>
  		<%= f.label :age %><br/>
  		<%= f.number_field :age %>
		</div>

	  <div>
  		<%= f.label :gender %><br/>
  		<%= f.text_field :gender %>
		</div>

	  <div>
  		<%= f.label :adhaar_number %><br/>
  		<%= f.text_field :adhaar_number %>
		</div>

	  <div>
  		<%= f.label :voter_id %><br/>
  		<%= f.text_field :voter_id %>
		</div>  	

	  <div>
  		<%= f.label :nationality %><br/>
  		<%= f.text_field :nationality %>
		</div>  	
  </div>

  <div id="ngo_company">
 	  <div>
	  	<%= f.label :owner %><br/>
	  	<%= f.text_field :owner %>
  	</div>

 	  <div>
	  	<%= f.label :year_established %><br/>
	  	<%= f.number_field :year_established %>
  	</div>

 	  <div>
	  	<%= f.label :service_type %><br/>
	  	<%= f.text_field :service_type %>
  	</div>

 	  <div>
	  	<%= f.label :pan_number %><br/>
	  	<%= f.text_field :pan_number %>
  	</div>
  </div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "users/shared/links" %>
