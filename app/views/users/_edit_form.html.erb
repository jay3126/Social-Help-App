<%= form_for @user, url: update_profile_user_path, html: {class: "form-horizontal"} do |f| %>
	<% if @user.errors.count > 0 %>
		<div style="color: #f00;">
			<h3><%= pluralize(@user.errors.count, "error") %> prohibited this user to update profile</h3>
			<ul>
				<% @user.errors.full_messages.each do |e| %>
					<li><%= e %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<fieldset>
		<legend>Contact Details</legend>
		<div class="control-group">
			<%= f.label :name,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :name %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :address,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_area :address %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :city,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :city %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :pin_code,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :pin_code, maxlength: 6, onkeypress: "return isNumber(event)" %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :state,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :state %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :country,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :country %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :mobile_number,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :mobile_number, maxlength: 10, onkeypress: "return isNumber(event)" %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :phone_number,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :phone_number %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :fax_number,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :fax_number %>
			</div>
		</div>
	</fieldset>

	<div id="company-fields" class="hide">
		<fieldset>
			<legend>Company Details</legend>
		<div class="control-group">
			<%= f.label :company_group,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :company_group %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :tan_number,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :tan_number %>
			</div>
		</div>

		<div class="control-group">
			<%= f.label :no_of_employees,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :no_of_employees %>
			</div>
		</div>
		</fieldset>
	</div>

	<div id="individual-details" class="hide">
		<fieldset>
			<legend>Personal Details</legend>
			<div class="control-group">
				<%= f.label :age,"", class: "control-label" %>
				<div class="controls">
					<%= f.text_field :age, onkeypress: "return isNumber(event)" %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :gender,"", class: "control-label" %>
				<div class="controls">
					<%= f.select(:gender, options_for_select(["Male","Female","Others"]),{ prompt: "Select Gender" }) %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :adhaar_number,"", class: "control-label" %>
				<div class="controls">
					<%= f.text_field :adhaar_number %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :voter_id,"", class: "control-label" %>
				<div class="controls">
					<%= f.text_field :voter_id %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :nationality,"", class: "control-label" %>
				<div class="controls">
					<%= f.text_field :nationality %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :pan_number,"", class: "control-label" %>
				<div class="controls">
					<%= f.text_field :pan_number %>
				</div>
			</div>
		</fieldset>
	</div>

	<div id="ngo-details" class="hide">
		<fieldset>
			<legend>NGO Details</legend>
		<div class="control-group">
			<%= f.label :service_type,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :service_type %>
			</div>
		</div>
		</fieldset>
	</div>

	<div id="company-ngo-common" class="hide">
		<div class="control-group">
			<%= f.label :owner,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :owner %>
			</div>
		</div>
		
		<div class="control-group">
			<%= f.label :year_established,"", class: "control-label" %>
			<div class="controls">
				<%= f.text_field :year_established, maxlength: 4, onkeypress: "return isNumber(event)" %>
			</div>
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<button type="submit"  class="btn btn-primary">Update Profile</button>
		</div>
	</div>
<% end %>
