<div class="sidebar" id="sidebar">

	<ul class="nav nav-list">
		<li id="li_dashboard">
			<a href="/dashboard">
				<i class="icon-dashboard"></i>
				<span class="menu-text"> Dashboard </span>
			</a>
		</li>

		<li>
			<a href="#" class="dropdown-toggle">
				<i class="icon-list"></i>
				<span class="menu-text"> All Issues </span>
				<b class="arrow icon-angle-down"></b>
			</a>
			<ul class="submenu">
				<% Constants::IssueCategoryConstant.to_list.each do |c| %>
					<% cat = c.downcase.strip.split(" ").join("_") %>
					<li id="li_<%= cat %>">
						<a href="/issues?cat=<%= cat %>">
							<i class="icon-double-angle-right"></i>
							<%= c %>
						</a>
					</li>
				<% end %>
			</ul>
		</li>

		<li>
			<a href="#" class="dropdown-toggle">
				<i class="icon-globe"></i>
				<span class="menu-text"> Projects </span>
				<b class="arrow icon-angle-down"></b>
			</a>

			<ul class="submenu">
				<li id="li_on_projects">
					<a href="/projects/ongoing_projects">
						<i class="icon-double-angle-right"></i>
						In Progress
					</a>
				</li>

				<li id="li_comp_projects">
					<a href="/projects/completed_projects">
						<i class="icon-double-angle-right"></i>
						Completed Projects
					</a>
				</li>
			</ul>
		</li>

		<li>
			<a href="#" class="dropdown-toggle">
				<i class="icon-money"></i>
				<span class="menu-text"> Fund </span>
				<b class="arrow icon-angle-down"></b>
			</a>

			<ul class="submenu">
				<li id="li_fund_release">
					<a href="/projects/pending_fund">
						<i class="icon-double-angle-right"></i>
						Allocate Fund
					</a>
				</li>

				<li id="li_fund_log">
					<a href="/projects/fund_log">
						<i class="icon-double-angle-right"></i>
						Fund Log
					</a>
				</li>
			</ul>
		</li>

		<li id="li_welfare-fund">
			<a href="/welfare_funds">
				<i class="icon-group"></i>
				<span class="menu-text"> Social Welfare Fund </span>
			</a>
		</li>

		<li id="li_profile">
			<a href="/profile?nav=profile">
				<i class="icon-picture"></i>
				<span class="menu-text"> Profile </span>
			</a>
		</li>
	</ul>

	<div class="sidebar-collapse" id="sidebar-collapse">
		<i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i>
	</div>

</div>
<script>
	<% if params[:nav].present? %>
		var nav = "<%= params[:nav] %>"
		$("#li_" + nav).addClass("active");
	<% elsif params[:cat].present? %>
		var category = "<%= params[:cat] %>"
		var li = $("#li_" + category);
		li.addClass("active");
		li.parent().closest("li").addClass("open").addClass("active");
	<% else %>
		$("#li_dashboard").addClass("active");
	<% end %>
</script>