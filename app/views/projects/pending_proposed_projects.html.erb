<div class="row-fluid">
	<div class="span3">
		<%= render_panel(current_user.role) %>
	</div>

	<div class="panel-sign-in span9"  style="margin-top: 40px;">
		<div class="panel-heading-sign-in">
			<h4>List of Proposed Projects</h4>
		</div>
		<div class="panel-body-sign-in">
			<% if @pending_proposed_projects.present? %>
				<div class="scrollit">
					<table class="table">
						<thead>
							<th>S. No.</th>
							<th>Issue Title</th>
							<th>Issue Description</th>
							<th>Related Area</th>
							<th>Area Pin Code</th>
							<th>Allocate Cost</th>
							<th>Allocate NGO</th>
							<th colspan="1"></th>
						</thead>
						<tbody>
							<% @pending_proposed_projects.each_with_index do |iss,i| %>
								<tr>
									<%= form_for(@project) do |a| %>
										<% interested_ngos = iss.users.where(role: "NGO").to_a.map{|x| [x.name, x.id]} %>
										<td><%= i + 1 %></td>
										<td><%= a.text_field :project_name, value: iss.issue_title, readonly: true %></td>
										<td><%= a.text_field :project_type, value: iss.issue_description, readonly: true %></td>
										<td><%= a.text_field :area, value: iss.issue_area, readonly: true %></td>
										<td><%= iss.issue_area_code %></td>
										<td><%= a.text_field :project_actual_cost, onkeypress: "return isNumber(event)", value: iss.project_est_cost %> INR </td>
										<td><%= a.select(:assigned_to, options_for_select(interested_ngos.present? ? interested_ngos : User.where(role: "NGO").collect{|x| [x.name, x.id]}), { prompt: "Select NGO"}) %></td>
										<%= a.hidden_field :issue_id, name: :issue_id, value: iss.id %>
										<td><%= link_to "View", issue_path(iss.id), class: "btn btn-primary" %></td>
										<td><input type="submit" value="Approve" class="btn btn-warning" ></td>
									<% end %>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% else %>
				<h4>No prosed projects available.</h4>
			<% end %>
		</div>
	</div>
</div>