<script class="secret-source">
		/*MAIN SLIDER*/
		function signIn(){
				window.location = "/users/sign_in";
		}

        jQuery(document).ready(function($) {
          
          $('#banner-slide').bjqs({
            height        : 370,
            width         : 680,
            responsive    : true,
            randomstart   : true
          });
          
        });
		/**END MAIN SLIDER */
		/* SPONSORS */
		 $("#flexiselDemo3").flexisel({
        visibleItems: 5,
        animationSpeed: 1000,
        autoPlay: true,
        autoPlaySpeed: 5000,            
        pauseOnHover: true,
        enableResponsiveBreakpoints: true,
        responsiveBreakpoints: { 
            portrait: { 
                changePoint:480,
                visibleItems: 1
            }, 
            landscape: { 
                changePoint:640,
                visibleItems: 2
            },
            tablet: { 
                changePoint:768,
                visibleItems: 3
            }
        }
    });
	/* END SPONSORS */	
      </script> 

</body>
</html>