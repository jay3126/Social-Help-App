<div class="row-fluid">
	<div class="span3">
		<%= render_panel(current_user.role) %>
	</div>

	<div class="panel-sign-in span9"  style="margin-top: 40px;">
		<div class="panel-heading-sign-in">
			<h4>All Issues</h4>
		</div>
		<div class="panel-body-sign-in">
			<% if @issues.present? %>
				<%= render 'issue_list'%>
			<% else %>
				<% if @comp %>
					<p>No completed issue(s)</p>
				<% else %>
					<p>You have not submitted any issue(s)</p>
				<% end %>
			<% end %>
		</div>
	</div>
</div>