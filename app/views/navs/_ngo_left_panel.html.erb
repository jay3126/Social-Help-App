<link rel="stylesheet" href="/assets/ace.min.css">
<link rel="stylesheet" href="/assets/ace-rtl.min.css">
<link rel="stylesheet" href="/assets/ace-skins.min.css">

<div class="sidebar" id="sidebar">

	<ul class="nav nav-list">
		<li id="li_dashboard">
			<a href="/dashboard">
				<i class="icon-dashboard"></i>
				<span class="menu-text"> Dashboard </span>
			</a>
		</li>

		<li id="li_all_projects">
			<a href="/issues">
				<i class="icon-list"></i>
				<span class="menu-text"> All Projects </span>
			</a>
		</li>

		<li id="li_add_new_project">
			<a href="/issues/new">
				<i class="icon-plus-sign"></i>
				<span class="menu-text"> Add New Project </span>
			</a>
		</li>

		<li id="li_pick_project">
			<a href="#">
				<i class="icon-download-alt"></i>
				<span class="menu-text"> Pick New Project </span>
			</a>
		</li>

		<li id="li_profile">
			<a href="/profile">
				<i class="icon-picture"></i>
				<span class="menu-text"> Profile </span>
			</a>
		</li>
	</ul>

	<div class="sidebar-collapse" id="sidebar-collapse">
		<i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i>
	</div>

</div>
<script>
	<% if params[:nav].present? %>
		var nav = "<%= params[:nav] %>"
		$("#li_" + nav).addClass("active");
	<% else %>
		$("#li_dashboard").addClass("active");
	<% end %>
</script>