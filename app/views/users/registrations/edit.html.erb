<div class="row-fluid">
	<div class="span3">
		<% if current_user.corporate? %>
			<%= render "navs/corp_left_panel"%>
		<% elsif current_user.socialist? %>
			<%= render "navs/socialist_right_panel"%>
		<% elsif current_user.ngo? %>
			<%= render "navs/ngo_left_panel"%>
		<% else %>
			<%= render "nav/analyst_left_panel"%>
		<% end %>
	</div>
	<div class="panel-sign-in span9">
		<div class="panel-heading-sign-in">
			<h4>Edit Details</h4>
		</div>
		<div class="panel-body-sign-in">
			<div class="form-wrapper">
				<%= render "form"%>
			</div>
		</div>
	</div>
</div>
<script>
	<% if current_user.corporate? %>
		$("#company-fields").removeClass("hide");
		$("#company-ngo-common").removeClass("hide");
	<% elsif current_user.socialist? %>
		$("#individual-details").removeClass("hide")
	<% elsif current_user.ngo? %>
		$("#ngo-details").removeClass("hide");
		$("#company-ngo-common").removeClass("hide");
	<% end %>
</script>