					</div>
				</div>
			</div>
				
			</div>
		</div>
	</div>
	<!-- LEFT END -->
	<!-- RIGHT START -->
	<div class="right_section">
		<div class="register">
			<div class="global_header">
				<span class="headerName">Register</span>
			</div>
			<div class="card"><a href="#"><img src="/assets/card.png" /></a></div>
		</div>
		
		<div class="NGO">
			<div class="global_header">
				<span class="headerName">NGOs</span>
			</div>
			<div class="imgNGO">
				<div class="row">
					<div class="large-12 columns">
						<ul id="demo2" class="large-12 columns">
							<% @registered_ngos.each do |user|%>
								<% if user.logo.present? %>
									<li>
										<%= image_tag(user.logo.logo.url(:medium))%>
									</li>
								<%else%>
									<li>
										<%= image_tag("missing.jpg")%>
									</li>    	
								<%end%>
							<%end%>
						</ul>
					</div>
				</div>
			</div>
		</div>
		
	</div>
	<div class="clear"></div>
	
	<div class="sponsor">
		<div class="global_header">
			<span class="headerName">Corporate partners</span>
		</div>
		<ul id="flexiselDemo3">
			<% @corporate_partners.each do |user|%>
				<% if user.logo.present? %>
					<li>
						<%= image_tag(user.logo.logo.url(:medium))%>
					</li>
				<%else%>
					<li>
						<%= image_tag("missing.jpg")%>
					</li>    	
				<%end%>
			<%end%>
		</ul>    
	</div>
	
	
	
	<!-- RIGHT END -->
	<div class="clear"></div>
</section>
<!-- MAIN CONTAINER END -->

<!-- FOOTER START -->
	<footer>
		<section class="footer_wrapper">
		   <span>&copy; 2014,  All rights are reserved.</span>
		</section>
	</footer>
