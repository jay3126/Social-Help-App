<div class="row-fluid">
	<div class="span3">
		<%= render_panel(current_user.role) %>
	</div>

	<div class="panel-sign-in span9"  style="margin-top: 40px;">
		<div class="panel-heading-sign-in">
			<h4>Allocated Projects</h4>
		</div>
		<div class="panel-body-sign-in">
			<% if @my_projects.present? %>
				<div class="scrollit">
					<table class="table">
						<thead>
							<th>S. No.</th>
							<th>Project name</th>
							<th>Project type</th>
							<th>Area</th>
							<th>Project est cost</th>
							<th>Est start date</th>
							<th>Est completion date</th>
							<th>Assigned to</th>
							<th>Assigned by</th>
							<th>Verified by</th>
							<th>Closed by</th>
							<th>Verification Status</th>
							<th>Project Status</th>
							<th>Project duration</th>
							<th colspan="3">Actions</th>
						</thead>
						<tbody>
							<% @my_projects.each_with_index do |project,i| %>
								<tr>
									<td><%= i + 1 %></td>
									<td><%= project.project_name %></td>
									<td><%= project.project_type %></td>
									<td><%= project.area %></td>
									<td><%= project.project_est_cost %></td>
									<td><%= project.est_start_date %></td>
									<td><%= project.est_completion_date %></td>
									<td><%= User.fetch_user_names(project.assigned_to) %></td>
									<td><%= User.fetch_user_names(project.assigned_by) %></td>
									<td><%= User.fetch_user_names(project.verified_by) %></td>
									<td><%= User.fetch_user_names(project.closed_by) %></td>
									<td><%= project.verified ? "Verified" : "Not Verified" %></td>
									<td><%= project.project_status %></td>
									<td><%= project.project_duration %></td>
									<td><%= link_to "View", project_path(id: project.id), class: "btn btn-primary" %></td>
									<% if project.project_status == "In Progress" %>
										<td><%= link_to "Edit", edit_project_path(id: project.id), class: "btn btn-warning" %></td>
										<td><%= link_to "Close Project", close_project_project_path(id: project.id), data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
									<% else %>
										<td><input type="button" class="btn btn-warning" disabled="disbaled" value="Edit"></td>
									<% end %>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			<% else %>
				<p>No Allocated Project(s) Found.</p>
			<% end %>
		</div>
	</div>
</div>