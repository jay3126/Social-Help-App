<div class="sidebar" id="sidebar">

	<ul class="nav nav-list">
		<li id="li_dashboard">
			<a href="/dashboard">
				<i class="icon-dashboard"></i>
				<span class="menu-text"> Dashboard </span>
			</a>
		</li>

		<li>
			<a href="#" class="dropdown-toggle">
				<i class="icon-text-width"></i>
				<span class="menu-text"> All Issues </span>
				<b class="arrow icon-angle-down"></b>
			</a>
			<ul class="submenu">
				<% Constants::IssueStatusConstant.to_list.each do |c| %>
					<% cat = c.downcase.strip.split(" ").join("_") %>
					<li id="li_<%= cat %>">
						<a href="/issues?cat=<%= cat %>">
							<i class="icon-double-angle-right"></i>
							<%= c %>
						</a>
					</li>
				<% end %>
			</ul>
		</li>

		<li id="li_ongoing_projects">
			<a href="/projects/ongoing_projects?spec=true">
				<i class="icon-play"></i>
				<span class="menu-text"> Ongoing Projects </span>
			</a>
		</li>

		<li id="li_completed_projects">
			<a href="/projects/completed_projects?spec=true">
				<i class="icon-stop"></i>
				<span class="menu-text"> Completed Projects </span>
			</a>
		</li>

		<li id="li_add_issue">
			<a href="/issues/new">
				<i class="icon-plus-sign"></i>
				<span class="menu-text"> Add New Issue </span>
			</a>
		</li>

		<li id="li_profile">
			<a href="/profile">
				<i class="icon-picture"></i>
				<span class="menu-text"> Profile </span>
			</a>
		</li>
		
	</ul>

	<div class="sidebar-collapse" id="sidebar-collapse">
		<i class="icon-double-angle-left" data-icon1="icon-double-angle-left" data-icon2="icon-double-angle-right"></i>
	</div>

</div>
<script>
	<% if params[:nav].present? %>
		var nav = "<%= params[:nav] %>"
		$("#li_" + nav).addClass("active");
	<% elsif params[:cat].present? %>
		var category = "<%= params[:cat] %>"
		var li = $("#li_" + category);
		li.addClass("active");
		li.parent().closest("li").addClass("open").addClass("active");
	<% else %>
		$("#li_dashboard").addClass("active");
	<% end %>
</script>